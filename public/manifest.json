{
    "manifest_version": 3,
    "name": "whisper-anywhere",
    "version": "1.2.7",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "64": "icon64.png",
        "128": "icon128.png"
    },
    "description": "Voice-to-Text Anywhere in Chrome with OpenAI Whisper API.",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon128.png",
        "default_popup": "index.html"
    },
    "permissions": [
        "storage",
        "clipboardWrite"
    ]
}